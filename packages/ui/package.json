    "@types/node": "^22.13.0",
    "@types/react": "19.0.8",
    "@types/react-dom": "19.0.3",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.21.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "@tailwindcss/postcss": "^4.1.4",
    "typescript": "5.7.3"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
